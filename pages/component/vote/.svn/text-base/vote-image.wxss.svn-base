/* pages/component/vote/vote-image.wxss */
.swiper-btn-left,.swiper-btn-right{
  position: absolute;
  top:50%;
  width: 48rpx;
  height:120rpx;
  margin-top:-110rpx;
  opacity: 0.6;
}
.swiper-btn-left{
  left:0;
}
.swiper-btn-right{
  right:0;
}
.swiper-btn-left.ipone,.swiper-btn-right.ipone{
  margin-top:-125rpx;
}
/* 底部样式 */
.vote-img-footer{
  width: 100%;
  height: 50px;
  background:rgba(61, 62, 66, 1);
  /* box-sizing: border-box; */
  /* padding: 10rpx; */
  text-align: center;
  line-height: 50px;
  font-size: 32rpx;
  color:#fff;
}
.look-left{
  display: block;
  float: left;
  /* width: 110px; */
  height:100%;
  padding-left:20rpx; 
  padding-top: 18rpx;
  box-sizing: border-box;
}
.look-right{
  display: block;
  float: right;
  height:50px;
  padding-right:45rpx; 
  line-height: 50px;
}
.look-left text{
  width: 100%;
  display: block;
  height: 22rpx;
  line-height: 22rpx;
  text-align: left;
  font-size: 22rpx;
  color:rgba(255,255,255,0.8);
}
.look-left .look-left-rank{
  font-size: 30rpx;
  /* font-weight: 700; */
  height: 32rpx;
  line-height: 32rpx;
  margin-bottom: 8rpx;
  color:#fff;
}
.look-right-contacts{
  display: inline-block;
  vertical-align: middle;
  width: 42rpx;
  height:48rpx;
  /* border:1px solid #fff; */
}
.look-right-timeline{
  display: inline-block;
  vertical-align: middle;
  width: 50rpx;
  height:50rpx;
  /* border:1px solid #fff; */
  /* margin-left:82rpx; */
}
.look-right-vote{
  display: inline-block;
  vertical-align: middle;
  width: 50rpx;
  height:46rpx;
  /* border:1px solid #fff; */
  /* margin-left:80rpx; */
}
.look-examine-img-form{
  display: block;
  width: 100%;
  height: 40px;
  border-radius: 10rpx;
  background: #fff;
  tab-size: center;
  line-height: 40px;
  font-size: 30rpx;
  font-weight: bold;
  color:#000;
  position: relative;
}
.look-self-examine-shen{
  position: absolute;
  top:0;
  right:0;
  width:80rpx; 
  height:80rpx;
}



/*单图修改后样式 */
.container{
  width: 100%;
  height:100%;
}
.page-body{
  width: 100%;
  height:100%;
  position: relative;
  overflow: hidden;
}
.vote-img-box{
  position: relative;
  width: 100%;
  background: #000;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.vote-img-des{
 position: absolute;
  bottom:0;
  left:0;
  width: 100%;
  box-sizing: border-box; 
  font-size: 32rpx;
  color:#fff;
  background: rgba(0,0,0,.5);
  overflow: hidden;
}
.vote-img-des.on{
  animation: animation1 0.5s linear both;
}
.vote-img-des text{
  display: block;
  margin:65rpx 40rpx 40rpx 30rpx;
  font-size: 24rpx;
}
.vote-img-boxe-num{
  position: absolute;
  top:10rpx;
  left:10rpx;
  height:80rpx; 
  border-radius: 16rpx;
  background: #fff;
  text-align: center;
   line-height: 80rpx; 
  font-size: 40rpx;
  font-weight: 700;
  padding: 0 20rpx;
  transform: scale(0.5);
  transform-origin: 0% 0%;
}
.vote-img-box-content{
  display: block;
  width: 100%;
  max-height: 100%;
  position: relative;
}
.vote-img-box-pic{
  display: block;
  width: 100%;
  max-height: 100%;
}
.vote-img-cha{
  position: absolute;
  top:0;
  right:0;
  width: 100rpx;
  height: 80rpx;
}
.vote-img-box-cha{
  position: absolute;
  top:8px;
  right:10px;
  width: 24rpx;
  height: 24rpx;
}
/* 修改后底部样式 */
.vote-img-footer{
  position: absolute;
  bottom:0;
  left:0;
  width: 100%;
  height:50px;
  line-height: 50px;
  /* padding: 5px; */
  background: #222;
}
.vote-img-footer.ipone{
  padding-bottom: 15px;
}
.vote-img-footer button, .vote-img-footer form{
  display: inline-block;
  margin: 0;
  padding: 0;
  background: transparent;
  height: 50px;
  line-height:50px;
}
.vote-img-footer form{
  width: auto;
}
.vote-img-footer-error{
  width:100%;
  height:100%;
  background: #db3944;
}
.vote-img-footer-text{
  display: block;
  text-align: center;
  height:50px;
  line-height: 50px;
  font-size: 30rpx;
  font-weight: bold;
}
.vote-img-footer-shen{
  position: absolute;
  top:5px;
  right:5px;
  width: 40px;
  height: 40px;
}
/* 分享朋友圈的弹层 */
.share-vote{
  position: absolute;
  top:0;
  left:0;
  z-index: 5;
  background: rgba(0,0,0,.6);
  width:100%;
  height:100%;
  padding-top:1px; 
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.share-vote-pic{
  display: block;
  width:630rpx;
  height: 910rpx;
  margin: 40rpx auto 22rpx;
  border-radius: 15rpx;
}
.share-vote-text{
  display: block;
  text-align: center;
  font-size: 22rpx;
  color:#fff;
  margin-bottom:24rpx;
}
.share-vote-cha{
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin:  0 auto;
}
.share-vote-content{
  width: 100%;
  margin-top:-15px; 
}

/* 新增swiper样式 */
.vote-swiper{
  width: 100%;
  height:100%;
  overflow: hidden; 
}
.vote-swiper-item{
  width: 100%;
  height:100%;
}

@keyframes animation1{
  0% {
    bottom:0;
  }
  100%{
    bottom:-500px;
  }
}