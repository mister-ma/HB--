/* pages/component/vote/vote-detail.wxss */
.page-body{
  background: #eee;
  box-sizing: border-box;
}
.vote-list-bg{
  width:100%;
  height:417rpx;
}
/* 投票每一个项目 */
.vote-item{
  display: block;
  margin: 0 30rpx 90rpx;
  position: relative;
  width: 690rpx;
  padding-top: 1px;
  border-radius: 10rpx;
  background: #fff;
}
.vote-item-flag{
  display: block;
  position: absolute;
  top:-30rpx;
  left:50%;
  width: 240rpx;
  height:60rpx;
  margin-left: -120rpx;
  background: #3adb88;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color:#fff;
}
.vote-item-flaged{
  background: #adadad;
}
.vote-item-title{
  display: block;
  width: 610rpx;
  margin:54rpx auto 30rpx;
  font-size: 30rpx;
}
.vote-item-picture{
  display: block;
  width: 100%;
  border-radius:0 0 10rpx 10rpx;
}