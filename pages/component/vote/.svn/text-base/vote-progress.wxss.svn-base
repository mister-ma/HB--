/* pages/component/vote/vote-progress.wxss */
.container{
  width: 100%;
  position: relative; 
  background: #333;
  display: block;
}
.page-bg{
  width: 100%;
  height:100%; 
  background: #000;
  position: fixed;
  top:0;
  left:0;
}
.bg{
  display: block;
  width: 100%;
  height:100%;
  opacity: 0.6; 
  filter: blur(10px);
}
.page-body{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  background: transparent;
  min-height: 100%;
  padding-bottom: 50px;
  box-sizing: border-box;
}
/* 投票标题 */
.voteinfo-title{
  display: block;
  margin: 40rpx auto 25rpx;
  width: 665rpx;
  font-size: 34rpx;
  color:#fff;
  line-height: 1.4;
  text-align: left;
}
/* 投票时间 */
.voteinfo-votetime{
  display: block;
  text-align: center;
  color:#fff;
  font-size: 28rpx;
  margin-bottom: 25rpx;
}
/* 投票描述 */
.voteInfo-summary{
  display: block;
  margin: 0 auto 30rpx;
  width: 665rpx;
  font-size: 26rpx;
  color:#fff;
}

/* 投票中的每一项 */
.vote-list-item{
  display: block;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}
.vote-item-img{
  display: block;
  width: 100%;
  border-radius: 15rpx;
  margin-bottom:20rpx; 
}
.vote-item-detailId{
  display: inline-block; 
  vertical-align: middle; 
  padding: 0 16rpx;
  height: 72rpx;
  border:4rpx solid #fff;
  border-radius: 8rpx;
  line-height: 72rpx; 
  text-align: center;
  /* margin-right:-6rpx;
  margin-left: -28rpx;  */
  color:#fff;
  font-size: 40rpx;
  transform: scale(0.5);
  transform-origin: 0% 50%;
  margin-right:-40rpx;
}
.vote-item-nickname{
  display: inline-block;
  vertical-align: middle; 
  height: 40rpx;
  line-height: 40rpx;
  color:#fff;
  font-size: 20rpx;
}
.vote-item-description{
  display: block;
  font-size: 24rpx;
  color:#fff;
  margin-bottom: 20rpx;
}
.vote-item-footer{
  height:30rpx;
  color:#fff;
  line-height: 30rpx;
}
.vote-item-footer text{
  height:30rpx;
}
.vote-item-rank,.vote-item-praiseCount{
  font-size: 20rpx;
  vertical-align: baseline;
}

/* form按钮 */
.vote-progress-form{
  display: block;
  height: 100rpx;
  background: #db3944;
  /* box-sizing: border-box; */
  position: absolute;
  bottom:0;
  left:0;
}
.vote-progress-form.iponex{
  padding-bottom: 15px;
}
.vote-progress-btn{
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #db3944;
  margin: 0;
  color:#fff;
  font-size: 30rpx;
  text-align: center;
  border-radius: 0;
  border-color:transparent; 
}
button::after{
  border: 0;
}