/* 没有三四步的时候的一步底部 */
.upload-img-footer{
  position: fixed;
  bottom:0;
  left:0;
  width: 100%;
  height: 50px;
  /* background: rgba(0,0,0,.6); */
  /* padding-top: 5px; */
  /* box-sizing: border-box; */
  /* border-top:1px solid #ccc; */
}
.choose-cropper-size-button,.re-choose-image-button{
  display: inline-block;
  width: 50%;
  height: 50px;
  background: #fff;
   border-radius: 0; 
  font-size: 28rpx;
  color:#000;
  text-align: center;
  line-height: 50px;
  font-weight: bold;
  /* margin-left: 4%; */
}
.confirm-image-button{
  display: inline-block;
  width: 50%;
  height: 50px;
  background: #db3944;
  border-radius: 0;
  color:#fff;
  
  line-height: 50px;
  /* margin-left: 4%; */
  font-size: 28rpx;
  font-weight: bold;
  /* letter-spacing: 40rpx; */
  text-align: center;
}
/* 没有三四步的时候的一步底部 */
/* 第二步底部 */
.upload-img-footer2{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cropper1{
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
  border: 2rpx solid #fff;
  text-align: center;
  line-height: 64rpx;
  font-size: 24rpx;
  margin-left: 206rpx;
  color: #fff;
  border-radius: 0; 
}
.cropper2{
  display: inline-block;
  width: 72rpx;
  height: 48rpx;
  border: 2rpx solid #fff;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 0; 
}
.cropper3{
  display: inline-block;
  width: 48rpx;
  height: 72rpx;
  border: 2rpx solid #fff;
  text-align: center;
  line-height: 72rpx;
  font-size: 24rpx;
  margin-right: 200rpx;
  color: #fff;
  border-radius: 0; 
}
.cropper1.on,.cropper2.on,.cropper3.on{
  border: 2rpx solid #db3944;
  color:#db3944;
}

/* 第三步 */
.wx-corpper{
  width: 100%;
  /* height: 100%; */
  background: #000;
}
.wx-corpper-content{
  width: 100%;
  height: 100%;
  background: #000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.wx-corpper-crop-box{
  position: absolute;
  background: rgba(255,255,255,0);
}
.wx-corpper-content-img{
  display: block;
  width: 100%;
  height: 100%;
}


/* 第四步 */
.upload-img-footer4{
  position: fixed;
  bottom:0;
  left:0;
  width: 100%;
  height: 50px; 
  /* box-sizing: border-box;  */
  background: #db3944;
}
.upload-img-footer4 form{
  display: block;
  width: 100%;
  height: 50px;
  position: relative;
}
#description{
 position: absolute;
 bottom:50px;
 left:0;
 width: 100%;
 font-size: 26rpx;
 padding: 30rpx;
 height: 86px;
 background: #fff;
 /* box-sizing: border-box; */
 white-space: normal;
}
.img-footer4-btn{
  display: block;
  width: 100%;
  height: 50px;
  background: #db3944;
  text-align: center;
  line-height: 50px;
  font-size: 30rpx;
  color:#fff;
  border-radius: 0;
}
.img-footer4-btn-icon{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

/* 第五步 */
.upload-img-footer5{
  position: fixed;
  bottom:0;
  left:0;
  width: 100%;
  height: 50px;
  /* box-sizing: border-box; */
  background: #fff;
  text-align: center;
  line-height: 50px;
  font-size: 30rpx;
  color:#000;
}
.img-footer5-icon{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  font-weight: bold;
  margin-top:-4px; 
}
.upload-img-footer.iponex,.upload-img-footer2.iponex,.upload-img-footer4.iponex,.upload-img-footer5.iponex{
  padding-bottom:15px; 
}