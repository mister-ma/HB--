/* pages/component/vote/vote-end.wxss */
 /* 复制投票进行中样式 */
.container{
  width: 100%;
  position: relative; 
  background: #333;
  display: block;
}
.page-bg{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height:100%;
  background: #000;
}
.bg{
  display: block;
  width: 100%;
  height:100%;
   opacity: 0.6; 
  filter: blur(10px);
}
.page-body{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  background: transparent;
}
/* 投票标题 */
.voteinfo-title{
  display: block;
  margin: 40rpx auto 25rpx;
  width: 665rpx;
  font-size: 34rpx;
  color:#fff;
  line-height: 1.4;
  text-align: left;
}
/* 投票时间 */
.voteinfo-votetime{
  display: block;
  text-align: center;
  color:#fff;
  font-size: 28rpx;
  margin-bottom: 25rpx;
  font-weight: bold;
}
/* 投票描述 */
.voteInfo-summary{
  display: block;
  margin: 0 auto 30rpx;
  width: 665rpx;
  font-size: 26rpx;
  color:#fff;
}

/* 投票中的每一项 */
.vote-list-item{
  display: block;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
  position: relative;
}
.vote-item-img{
  display: block;
  width: 100%;
  border-radius: 15rpx;
  margin-bottom:20rpx; 
}
.vote-item-detailId{
  display: inline-block;
  vertical-align: middle;
  padding: 0 16rpx;
  height: 72rpx;
  border:4rpx solid #fff;
  border-radius: 16rpx;
  line-height: 72rpx;
  text-align: center;
  margin-right:-40rpx;
  /* margin-left: -30rpx; */
  color:#fff;
  font-size: 40rpx;
  transform: scale(0.5);
  transform-origin: 0% 50%;
}
.vote-item-nickname{
  display: inline-block;
  vertical-align: middle;
  height: 40rpx;
  line-height: 40rpx;
  color:#fff;
  font-size: 20rpx;
  max-width: 460rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.vote-item-description{
  display: block;
  font-size: 24rpx;
  color:#fff;
  margin-bottom: 20rpx;
}
.vote-item-footer{
  /* height:30rpx; */
  height:80rpx;
  color:#fff;
  line-height: 80rpx;
    /* line-height: 30rpx; */
  float: right;
}
.vote-item-footer text{
  height:30rpx;
}
.vote-item-praiseCount{
  font-size: 26rpx;
  font-weight: bold;
  vertical-align: middle;
  margin-right: 8rpx;
}

/* 投票结束样式新增 */
.vote-item-order-img{
  position: absolute;
  top:-20rpx;
  left:10rpx;
  width: 100rpx;
  height: 100rpx;
  /* border:1px solid #fff; */
}
.vote-item-footer-heart{
  display: inline-block;
  width: 22rpx;
  height:20rpx;
  /* border:1px solid #fff; */
  margin-right: 20rpx;
}