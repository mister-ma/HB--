<!--pages/component/vote/vote-progress.wxml-->


<view class="container" >
  <view class="page-bg">
    <image src="../../../images/vote_bg3.jpg" class="bg"></image>
  </view>
  <view class="page-body">
     <!-- 投票标题 -->
    <text class="voteinfo-title">{{voteInfo.Title}}</text>
    <!-- 投票时间 -->
    <text class="voteinfo-votetime">海选时间：{{voteInfo.VoteStartTime}} - {{voteInfo.VoteEndTime}}</text>

    <!-- 投票描述 -->
    <text class="voteInfo-summary">{{voteInfo.Summary}}</text>
    <block wx:for="{{voteList}}" wx:for-item="item" wx:key="idx">
      <view class="vote-list-item">
        <!-- 投票图片 -->
        <image wx:if="{{item.Picture}}" src="{{item.Picture}}" class="vote-item-img" mode="widthFix"></image>
        <view >
          <!-- 编号 -->
          
            <text class="vote-item-detailId">{{item.VoteDetailID}}</text>
     
          
          <!-- 作者 -->
          <text class="vote-item-nickname">作者：{{item.NickName}}</text>
        </view>
        <!-- 图片描述 -->
        <text wx:if="{{item.FileDescription}}" class="vote-item-description">{{item.FileDescription}}</text>
        <view class="vote-item-footer">
          <!-- 当前排名 -->
          <text class="vote-item-rank">当前排名：</text>
          <text style="font-size:26rpx; margin-right:20rpx; font-weight:bold;">{{item.VoteRank}}</text>
          <!-- 喜欢人数 -->
          <text class='vote-item-praiseCount'>喜欢人数：</text>
          <text style="font-size:26rpx; font-weight:bold;">{{item.VotePraiseCount}}</text>
        </view>
      </view>
    </block>

    <form wx:if="{{isOK}}" report-submit='true' class="vote-progress-form {{isIponeX?'iponex':''}}" >
      <button form-type='submit' class="vote-progress-btn">请前往各大市场下载《街拍》APP，为你喜欢的作品投票</button>
    </form>
  </view>
  
</view>
