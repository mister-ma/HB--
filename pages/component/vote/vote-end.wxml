<!--pages/component/vote/vote-end.wxml-->

<view class="container">
  <view class="page-bg">
    <image src="../../../images/vote_bg4.jpg" class="bg"></image>
  </view>
  <view class="page-body">
     <!-- 投票标题 -->
    <text class="voteinfo-title">{{voteInfo.Title}}</text>
    <!-- 投票时间 -->
    <text class="voteinfo-votetime">投票已结束</text>
    <!-- 投票描述 -->
    <text class="voteInfo-summary">{{voteInfo.Summary}}</text>

    <block wx:for="{{voteList}}" wx:for-item="item" wx:key="idx">
      <view class="vote-list-item">
        <!-- 投票图片 -->
        <image wx:if="{{item.Picture}}" src="{{item.Picture}}" class="vote-item-img" mode="widthFix"></image>
        <block wx:if="{{item.VoteRank == 1}}">
          <image src="../../../images/icon_medal_1.png" class="vote-item-order-img"></image>
        </block>
        <block wx:elif="{{item.VoteRank == 2}}">
          <image src="../../../images/icon_medal_2.png" class="vote-item-order-img"></image>
        </block>
        <block wx:elif="{{item.VoteRank == 3}}">
          <image src="../../../images/icon_medal_3.png" class="vote-item-order-img"></image>
        </block>
        
        <view>
          <!-- 编号 -->
          <text class="vote-item-detailId">{{item.VoteDetailID}}</text>
          <!-- 作者 -->
          <text class="vote-item-nickname">作者：{{item.NickName}}</text>
          <view class="vote-item-footer">
          <image src="../../../images/icon_xihuan.png" class="vote-item-footer-heart"></image>
          <!-- 喜欢人数 -->
          <text class='vote-item-praiseCount'>{{item.VotePraiseCount}}</text>
          <text style="font-size:18rpx; vertical-align:3rpx; margin-right:1px;">人喜欢</text>
        </view>
        </view>
        <!-- 图片描述 -->
        <text wx:if="{{item.FileDescription}}" class="vote-item-description">{{item.FileDescription}}</text>
        <!-- <view class="vote-item-footer">
          <image src="../../../images/icon_xihuan.png" class="vote-item-footer-heart"></image> -->
          <!-- 喜欢人数 -->
          <!-- <text class='vote-item-praiseCount'>{{item.VotePraiseCount}}</text>
          <text style="font-size:18rpx; vertical-align:3rpx;">人喜欢</text>
        </view> -->
      </view>
    </block>
  </view>
</view>






