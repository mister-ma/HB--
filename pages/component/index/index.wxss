.page-body{
    /* height: 100%;  
    overflow-y: scroll;  */
}
.article-item{
  display: block;
  width: 750rpx;
  box-sizing: border-box;
  padding: 30rpx 30rpx 2rpx;
  background: #fff;
}
.article-item-picture{
  display: block;
  width:690rpx;
  border-radius: 5px;
}
.article-item-title{
  display: block;  
  font-size: 16px;
  font-weight: bold;
  padding-top: 30rpx;
}
.article-item-comment{
  position: relative;
  display: block;
  margin-top: 20rpx;
  padding-left: 23px;
}
.comment-icon{
  position: absolute;
  top:2px;
  left:0;
  display: block;
  width: 35rpx;
  height: 30rpx;
}
.article-comment-view{
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
}
.comment-username{
  color:#888;
  margin-right: 8px;
}

.article-item-bar{
  width: 100%;
  height: 10px;
  background: #f0f0f0;
  margin: 15px 0 0;
}
/* loading背景图 */
.index_bg{
  display: block;
  width: 100%; 
  height: 100%;
  opacity: 0.6;
  /* height: 95%; */
  /* max-height: 100%; */
}
.index_bg_line{
  position: fixed;
  bottom:0;
  left:0;
  width: 100%;
  height: 100rpx;
}