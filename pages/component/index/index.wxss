.video-title{
  position: absolute;
  bottom: 10px;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color:#fff;
  font-weight: bold;
  z-index: 10;
}
.video-top{
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  z-index: 20;
  background: #000;
  border-radius: 10rpx;
}
.video-top-img{
  display: block;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  border-radius: 10rpx;
}
.video-top-txt{
  position: absolute;
  bottom: 10px;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color:#fff;
  font-weight: bold;
  z-index: 10;
}
.video-top-player{
  position: absolute;
  top:50%;
  left:50%;
  width: 90rpx;
  height: 60rpx;
  margin-left: -45rpx;
  margin-top: -30rpx;
}
/* 回到顶部 */
.backtop{
  display: block;
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  bottom:12rpx;
  right:12rpx;
}

