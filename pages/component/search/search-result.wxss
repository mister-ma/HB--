page{
  width: 100%;
  height: 100%; 
}
.container{
  width: 100%;
  min-height: 100%;
}
.search-box{
  display: block;
  width: 100%;
  background: #fff;
  /* overflow: hidden; */
}
.search-goods-detail{
  display: block;
  width: 690rpx;
  margin: 0 auto;
  height: 88rpx;
  padding: 20rpx 0;
}
.search-left{
  display: block;
  float: left;
  width: 590rpx;
  height: 88rpx;
  position: relative;
  border-radius: 15rpx;
}
#searchOrderId{
  display: block;
  width: 590rpx;
  height: 88rpx;
  background: #eff9fe;
  border-radius: 15rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.search-icon{
  position: absolute;
  top:50%;
  left:20rpx;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}
.search-cha{
  position: absolute;
  top:50%;
  right:20rpx;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}
.search-orderId-btn{
  display: block;
  float: right;
  width: 88rpx;
  height: 88rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 88rpx;
  color:#000;
  font-size: 30rpx;
  padding-left: 0;
  padding-right: 0;
  background: #fff;
  border: 0;
  font-weight: bold;
}
.search-orderId-btn::after{
  border:0;
}
.search-orderId-btn.on{
 background: #c49a58;
 color:#fff;
}

/* 搜索列表 */
.search-list-item{
  display: block;
  width: 690rpx;
  height: 200rpx;
  padding: 30rpx 0;
  margin: 0 auto;
}

.search-list-item-left{
  display: block;
  float: left;
  width: 460rpx;
}
.goods-title{
  display: block;
  width: 390rpx;
  overflow: hidden;
  max-height: 80rpx;
  padding: 20rpx 0; 
  line-height: 40rpx;
  font-size: 25rpx;
  margin-left: 30rpx;
}
.goods-price{
  display: block;
  width: 390rpx;
  overflow: hidden;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: bolder;
  line-height: 80rpx;
  margin-left: 30rpx;
}
.search-list-item-right{
  display: block;
  float: left;
  width: 196rpx;
  height: 196rpx;
  border: 2rpx solid #f4f4f4;
  background:#f4f4f4; 
}
.search-result-line{
  display: block;
  width: 100%;
  height: 1px;
  background: #f4f4f4;
}
.search-result-none{
  display: block;
  width: 100%;
  padding-top: 280rpx;
}
.search-result-none-img{
  display: block;
  width: 239rpx;
  height: 187rpx;
  margin: 0 auto 26rpx;
}
.search-result-none-text{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color:#afb1c0;
  font-weight: bolder;
}