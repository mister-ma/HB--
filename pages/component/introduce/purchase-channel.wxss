page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}

/* 品牌介绍 */
.purchase-brand{
  display: flex;
  flex-direction: column ;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
  position: relative;
}
.purchase-brand-img1,.purchase-brand-img2,.purchase-brand-img3{
  display: block;
  width: 100%;
  
}
.purchase-brand-img1{
  flex-grow:1;
}
.purchase-brand-bottom{
  display: block;
  width: 100%;
  position: relative;
}
.purchase-brand-title{
  position: absolute;
  top:50rpx;
  left:50rpx;
  font-size: 28rpx;
  font-weight: bolder;
  color:#fff;
}
.brand-name{
  position: absolute;
  top:110rpx;
  left:50rpx;
  font-size: 22rpx;
  color:#fff;
  width: 651rpx;

}


/* 店铺瀑布流图  */
.purchase-waterfall{
  display: block;
  /* padding: 0 4%; */
  width: 100%;
  box-sizing: border-box;
  background: #f7f8ff;
  padding-top: 30rpx;
  min-height: 100%;
}
.left-img{
  display: block;
  float: left;
  width: 44%;
  margin-right: 4%;
  margin-left: 4%;
}
.right-img{
  display: block;
  float: left;
  width: 44%;
}
.purchase-waterfall image{
  display: block;
  width: 100%;
  margin-bottom: 30rpx;
}


/* 购买渠道 */
.purchase-buy{
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
}
.purchase-buy-bg{
  display: block;
  width:100%;
  height: 100%;
}
.purchase-buy-name{
  position: absolute;
  top:75rpx;
  left:0;
  width: 100%;
  text-align: center;
  text-transform: uppercase;
}
.purchase-buy-title{
  position: absolute;
  top:180rpx;
  left:50rpx;
  font-size: 28rpx;
  font-weight: bold; 
}
.brand-introduction{
  position: absolute;
  top:250rpx;
  left:50rpx; 
  font-size: 24rpx;
  width: 650rpx;
  line-height: 42rpx;
}
.purchase-buy-font{
  position: absolute;
  top:560rpx;
  left:50%; 
  width: 250rpx;
  height: 40rpx;
  margin-left: -125rpx;
}
.purchase-buy-erweima{
  position: absolute;
  top: 640rpx;
  left:50%;
  width: 320rpx;
  margin-left: -160rpx;
}