.container{
  width: 100%;
  background: #fff;
}
.page-body{
  width: 100%;
  padding-left: 2.85%;
  padding-right: 2.75%;
  padding-top: 5px;
  box-sizing: border-box; 
  overflow: hidden;
}
image{
   background: #F0F0F0; 
   /* height: auto; */
}
.list-left,.list-right{
  width: 47.5%;
  padding: 0 1.25%;
  display: block;
  float: left;
}
.album-item{
  width: 100%;
  margin-bottom: 35rpx;
}
.album-item-pic{
  display: block;
  width: 100%;
  border-radius:10rpx;
  margin-bottom: 5rpx; 
}
.album-item-title{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.album-item-user{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color:#a0a0a0;
}
.album-item-img-top,.album-item-img-bottom{
  display: block;
  width: 100%;
  overflow: hidden;
}
.album-item-img-top{
  margin-bottom: 5rpx;
}
.album-item-img-bottom{
  margin-top: 5rpx;
}
.album-item-left-pic,.album-item-right-pic{
  display: block;
  width: 49.4%;
  float: left;
  border-radius:10rpx; 
}
.album-item-left-pic{
  margin-right: 1.2%;
}